
@{
    ViewData["Title"] = "Details";
    var det = (ProductModel)ViewData["Products"];
    var color = ViewData["Color"];
    Layout = "_LayoutWeb";
}

<h1>Details</h1>
<table class="table" style="background-color:@color">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
        </tr>
    </thead>
    <tbody>

        <tr>
            <th scope="row">@det.ID</th>
            <td>@det.Name</td>
            <td>@det.Price</td>
            <td><img style="width:200px; height:200px" src="@det.Image" alt="@det.Image" /></td>
        </tr>


    </tbody>
</table>