
@{
    ViewData["Title"] = "Index";
    var prds = (List<ProductModel>)ViewData["Products"];
    var color = ViewData["Color"];
    Layout = "_LayoutWeb";
}

<h1>Index</h1>
<table class="table" style="background-color:@color">
    <caption style="background-color:@color">My savings</caption>

    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prod in prds)
        {
            <tr>
                <th scope="row">@prod.ID</th>
                <td>@prod.Name</td>
                <td>@prod.Price</td>
                <td><img style="width:200px; height:200px" src="@prod.Image" alt="@prod.Image" /></td>
                <td> <a href="/Products/Details/@prod.ID"> <button type="button" class="btn btn-danger"> Show </button></a></td>
            </tr>

        }
    </tbody>
</table>